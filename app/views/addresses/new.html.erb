<h1>Enter Your Address</h1>

<% if flash[:notice] %>
  <div style="color: green; margin: 10px 0;">
    <%= flash[:notice] %>
  </div>
<% end %>

<% if flash[:alert] %>
  <div style="color: red; margin: 10px 0;">
    <%= flash[:alert] %>
  </div>
<% end %>

<%= form_with url: addresses_path, method: :post, local: true do |form| %>
  <div style="margin: 20px 0;">
    <%= form.label :address, "Address:", style: "display: block; margin-bottom: 5px;" %>
    <%= form.text_field :address, 
        placeholder: "123 Main St, City, State, ZIP", 
        style: "width: 400px; padding: 8px; font-size: 16px;" %>
  </div>
  
  <div>
    <%= form.submit "Submit Address", 
        style: "background-color: #007bff; color: white; padding: 10px 20px; border: none; border-radius: 4px; cursor: pointer;" %>
  </div>
<% end %>